# ===========================================
# CONFIGURATION DU SERVEUR
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# SÉCURITÉ - JWT
# ===========================================
# IMPORTANT: Générez une clé secrète unique et complexe
# Utilisez: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGEZ_MOI_AVEC_UNE_CLE_SECRETE_DE_64_CARACTERES_MINIMUM
JWT_EXPIRES_IN=7d

# ===========================================
# ADMIN - Premier compte administrateur
# ===========================================
# Ces informations seront utilisées lors du setup initial
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_SECURISE
ADMIN_EMAIL=votre@email.com

# ===========================================
# CORS - Origines autorisées
# ===========================================
FRONTEND_URL=http://localhost:5173

# ===========================================
# BASE DE DONNÉES
# ===========================================
DATABASE_PATH=./data/portfolio.db

# ===========================================
# UPLOAD - Configuration des fichiers
# ===========================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./uploads
